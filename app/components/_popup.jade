include _button

// popup SECTION
.popup-overlay
    .popup.popup__order(data-target="popup-order")
        .popup-header
            h3.title Ваш заказ успешно оформлен!
        .popup-content
            .content В ближайшее время мы свяжемся с Вами
        .close-btn.icon.icon-close

    .popup.popup__cart(data-target="popup-cart")
        .popup-header
            h3.title Спасибо!
        .popup-content
            .content
                | Товар добавлен
                +button('в корзину', 'a')(class="btn-link" title='корзина' href="/cart.html")
        .close-btn.close
            .close-container
                .leftright
                .rightleft
                .text закрыть

    .popup.popup__favorite(data-target="popup-favorite")
        .popup-header
            h3.title Спасибо!
        .popup-content
            .content
                | Товар Осенняя утепленная куртка Plus Size добавлен
                +button('в избранное', 'a')(class="btn-link" title='избранное' href="/favorite.html")
        .close-btn.close
            .close-container
                .leftright
                .rightleft
                .text закрыть

    .popup.popup__favorite-del(data-target="popup-favorite-del")
        .popup-header
            h3.title Товар Осенняя утепленная куртка Plus Size
        .popup-content
            .content
                | удален из
                +button('избранного', 'a')(class="btn-link" title='избранное' href="/favorite.html")
        .close-btn.close
            .close-container
                .leftright
                .rightleft
                .text закрыть

    .popup.popup__product-delete(data-target="popup-product-delete")
        .popup-header
            h3.title Удаление товара
        .popup-content
            .content
                | Данный товар будет удален
                .popup-buttons
                    +button('удалить', 'button')(class="js__product-delete btn-transparent btn-small")
                    +button('не удалять', 'button')(class="js__product-delete-reset btn-small")

    .popup.popup__call(data-target="popup-call")
        form.popup-content.js_validate
            .popup-header
                h3.title В ближайшее время мы Вам перезвоним
            .input-container
                label.req(for="name-call") Имя
                input(type="text" name="name" id="name-call" required="required" data-validate="text"  data-error-wrong="Недопустимые символы" data-error-empty="Введите колличество символов (2-100)" data-minsign="2" data-maxsign="100").validate
                .text-error Поле  не заполнено
            .input-container
                label.req(for="phone") Телефон
                input(type="tel" id="phone" required="required" data-validate="phone" data-error-wrong="Поле «Телефон» заполнено не верно" data-error-empty="Введите колличество символов(11)").validate
                .text-error Поле  не заполнено
            +button('перезвоните мне', 'button')
        .close-btn.close
            .close-container
                .leftright
                .rightleft
                .text закрыть

    .popup.popup__one-click(data-target="popup-one-click")
        form.popup-content.js_validate
            .popup-header
                h3.title Заказать тоар Осенняя утепленная куртка Plus Size
            .input-container
                label.req(for="name-one-click") Имя
                input(type="text" name="name" id="name-one-click" required="required" data-validate="text"  data-error-wrong="Недопустимые символы" data-error-empty="Введите колличество символов (2-100)" data-minsign="2" data-maxsign="100").validate
                .text-error Поле  не заполнено
            .input-container
                label.req(for="email-one-click") Email
                input(type="email" name="email" id="email-one-click" required="required" data-validate="email" data-error-wrong="Поле «Email» заполнено не верно" data-error-empty="Поле «Email» не заполнено").validate
                .text-error Поле «Email» не заполнено
            .input-container
                label.req(for="phone-one-click") Телефон
                input(type="tel" id="phone-one-click" required="required" data-validate="phone" data-error-wrong="Поле «Телефон» заполнено не верно" data-error-empty="Введите колличество символов(11)").validate
                .text-error Поле  не заполнено
            +button('оформить заказ', 'button')
        .close-btn.close
            .close-container
                .leftright
                .rightleft
                .text закрыть

