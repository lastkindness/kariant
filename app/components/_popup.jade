                label.req(for="name") Имя
                input(type="text" name="name" id="name" required="required" data-validate="text"  data-error-wrong="Недопустимые символы" data-error-empty="Введите колличество символов (2-100)" data-minsign="2" data-maxsign="100").validate
                .text-error Поле  не заполнено
            .input-container
                label.req(for="email") Email
                input(type="email" name="email" id="email" required="required" data-validate="email" data-error-wrong="Поле «Email» заполнено не верно" data-error-empty="Поле «Email» не заполнено").validate
                .text-error Поле «Email» не заполнено
            +button('сообщите мне о наличии товара', 'button')
        .close-btn.close
            .close-container
                .leftright
                .rightleft
                .text закрыть

