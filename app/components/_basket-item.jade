include _input-number

mixin basket-item(basketImg, basketItemTitle, basketPrice, basketClassItem, basketSize)
    a.basket-item(class=basketClassItem[z] href="/card.html")
        .basket-item__img
            img.image(src="images/products/"+basketImg[z] alt= basketItemTitle[z] title= basketItemTitle[z])
        .basket-item__info-wrapper
            .basket-item__info
                .basket-item__name
                    h3.title= basketItemTitle[z]
                .basket-item__size
                    span.size Размер:
                    span.value= basketSize[z]
            .basket-item__price
                span.value= basketPrice[z]
                span.currency грн
        .basket-item__controls
            .basket-item__remove(data-target="product-delete")
                .icon.icon-close
            +input-number